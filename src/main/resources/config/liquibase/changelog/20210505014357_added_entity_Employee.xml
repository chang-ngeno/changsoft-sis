<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity Employee.
    -->
    <changeSet id="20210505014357-1" author="jhipster">
        <createTable tableName="employee">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="middle_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="student_reg_number" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="date_of_birth" type="${datetimeType}">
                <constraints nullable="false" />
            </column>
            <column name="staff_sys_no" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="reg_doc_type" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="registration_document_number" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="gender" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="nationality" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="date_joined" type="${datetimeType}">
                <constraints nullable="false" />
            </column>
            <column name="deleted" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="wxt_jwt_pq_55_wd" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="employee" columnName="date_of_birth" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="employee" columnName="date_joined" columnDataType="${datetimeType}"/>
    </changeSet>

    <changeSet id="20210505014357-1-relations" author="jhipster">

        <createTable tableName="rel_employee__relative">
            <column name="relative_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="employee_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="employee_id, relative_id" tableName="rel_employee__relative"/>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->

    <!--
        Load sample data generated with Faker.js
        - This data can be easily edited using a CSV editor (or even MS Excel) and
          is located in the 'src/main/resources/config/liquibase/fake-data' directory
        - By default this data is applied when running with the JHipster 'dev' profile.
          This can be customized by adding or removing 'faker' in the 'spring.liquibase.contexts'
          Spring Boot configuration key.
    -->
    <changeSet id="20210505014357-1-data" author="jhipster" context="faker">
        <loadData
                  file="config/liquibase/fake-data/employee.csv"
                  separator=";"
                  tableName="employee">
            <column name="id" type="numeric"/>
            <column name="first_name" type="string"/>
            <column name="middle_name" type="string"/>
            <column name="last_name" type="string"/>
            <column name="student_reg_number" type="string"/>
            <column name="date_of_birth" type="${datetimeType}"/>
            <column name="staff_sys_no" type="string"/>
            <column name="reg_doc_type" type="string"/>
            <column name="registration_document_number" type="string"/>
            <column name="gender" type="string"/>
            <column name="nationality" type="string"/>
            <column name="date_joined" type="${datetimeType}"/>
            <column name="deleted" type="boolean"/>
            <column name="wxt_jwt_pq_55_wd" type="string"/>
            <!-- jhipster-needle-liquibase-add-loadcolumn - JHipster (and/or extensions) can add load columns here -->
        </loadData>
    </changeSet>
</databaseChangeLog>
